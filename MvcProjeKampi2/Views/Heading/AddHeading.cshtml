@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <label>Başlık Adı</label>
    <input type="text" name="HeadingName" class="form-control" />
    @Html.ValidationMessageFor(x => x.HeadingName)

    <br />
    <br />

    <label>Kategori</label>
    @Html.DropDownListFor(m => m.CategoryId, (List<SelectListItem>)ViewBag.vCategories, new { @class = "form-control" })

    <br />
    <br />

    <label>Yazar</label>
    @Html.DropDownListFor(m => m.AuthorId, (List<SelectListItem>)ViewBag.vAuthors, new { @class = "form-control" })

    <br />
    <br />

    <button class="btn btn-info">Kaydet</button>
}


