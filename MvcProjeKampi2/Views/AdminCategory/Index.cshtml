@model List<EntityLayer.Concrete.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <table class="table table-hover">
        <br />
        <br />

        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Başlıklar</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CategoryId</th>
                <td>@item.CategoryName</td>
                <td><a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                <td><a href="/AdminCategory/EditCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a></td>
                <td><a href="#" class="btn btn-info">Başlıklar</a></td>
            </tr>
        }
    </table>
    <a href="/AdminCategory/AddCategory/" class="btn btn-outline-warning">Yeni Kategori Ekle</a>
</div>

